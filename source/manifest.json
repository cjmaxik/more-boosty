{
  "name": "More Boosty",
  "version": "0.0.0",
  "description": "__MSG_description__",
  "homepage_url": "https://vk.com/iamcjmaxik?ref=more_boosty",
  "manifest_version": 3,
  "minimum_chrome_version": "100",
  "default_locale": "en",
  "icons": {
    "128": "assets/icon.png",
    "24": "assets/icon24.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://*.boosty.to/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://boosty.to/*"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.scss"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options/options.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  }
}